<div class="category-page">
  <div class="category-header">
    <h1>üìÅ <%= category.name %></h1>
    <p class="category-subtitle">
      <span><%= products.length %> s·∫£n ph·∫©m</span>
      <a href="/categories" class="back-link">‚Üê Quay l·∫°i danh m·ª•c</a>
    </p>
  </div>
  
  <% if (!products || products.length === 0) { %>
    <div class="empty-products">
      <div class="empty-icon">üì¶</div>
      <h3>Danh m·ª•c tr·ªëng</h3>
      <p class="muted">Ch∆∞a c√≥ s·∫£n ph·∫©m n√†o trong danh m·ª•c n√†y.</p>
      <a href="/" class="btn primary">Kh√°m ph√° s·∫£n ph·∫©m kh√°c</a>
    </div>
  <% } else { %>
    <div class="products-grid">
      <% products.forEach(p => { %>
        <div class="product-card">
          <div class="product-image">
            <img src="<%= p.image || '/img/placeholder.jpg' %>" alt="<%= p.title %>" loading="lazy" decoding="async">
            <div class="product-overlay">
              <a href="/product/<%= p.slug %>" class="btn quick-view">Xem chi ti·∫øt</a>
            </div>
          </div>
          <div class="product-info">
            <h3 class="product-title">
              <a href="/product/<%= p.slug %>"><%= p.title %></a>
            </h3>
            
            <p class="product-description">
              <%= (p.description || '').slice(0, 80) %><%= (p.description && p.description.length > 80) ? '...' : '' %>
            </p>
            
            <div class="product-stock">
              <% if (p.stock > 0) { %>
                <span class="in-stock">‚úÖ C√≤n h√†ng (<%= p.stock %>)</span>
              <% } else { %>
                <span class="out-of-stock">‚ùå H·∫øt h√†ng</span>
              <% } %>
            </div>
            
            <div class="product-footer">
              <div class="product-price">
                <% if (p.discount_percent && Number(p.discount_percent) > 0) { %>
                  <% const orig = ((p.price_cents || 0)/100).toLocaleString('vi-VN',{style:'currency',currency:'VND'});
                     const discountedCents = Math.round((p.price_cents || 0) * (100 - Number(p.discount_percent)) / 100);
                     const discounted = (discountedCents/100).toLocaleString('vi-VN',{style:'currency',currency:'VND'});
                  %>
                  <div class="price-with-discount">
                    <span class="price-original" style="text-decoration:line-through;color:var(--muted)"><%= orig %></span>
                    <span class="price-discounted" style="color:var(--green);margin-left:8px;font-weight:700"><%= discounted %></span>
                    <span class="discount-pill small">-<%= p.discount_percent %>%</span>
                  </div>
                <% } else { %>
                  <span class="price"><%= ((p.price_cents || 0)/100).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %></span>
                <% } %>
              </div>
              <div class="product-actions">
                <% if (currentUser) { %>
                  <form action="/wishlist/add/<%= p.id %>?_csrf=<%= csrfToken %>" method="post" class="wishlist-form">
                    <button class="btn wishlist-btn <%= (typeof wishlistIds !== 'undefined' && wishlistIds.includes(p.id)) ? 'active' : '' %>" type="submit" title="Th√™m v√†o danh s√°ch y√™u th√≠ch" aria-pressed="<%= (typeof wishlistIds !== 'undefined' && wishlistIds.includes(p.id)) ? 'true' : 'false' %>">
                      <svg class="icon-heart" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"></path></svg>
                    </button>
                  </form>
                <% } %>
                
                <% if (p.stock > 0) { %>
                  <form action="/cart/add/<%= p.id %>?_csrf=<%= csrfToken %>" method="post">
                    <button class="btn primary" type="submit">
                      <svg class="icon-cart" viewBox="0 0 576 512" width="16" height="16" aria-hidden="true" style="vertical-align:middle;margin-right:6px;"><path d="M551.991 64H144.28l-8.726-44.608C133.35 8.128 123.478 0 112 0H12C5.373 0 0 5.373 0 12v24c0 6.627 5.373 12 12 12h80.24l69.594 355.701C150.796 415.201 144 430.802 144 448c0 35.346 28.654 64 64 64s64-28.654 64-64a63.681 63.681 0 0 0-8.583-32h145.167a63.681 63.681 0 0 0-8.583 32c0 35.346 28.654 64 64 64 35.346 0 64-28.654 64-64 0-18.136-7.556-34.496-19.676-46.142l1.035-4.757c3.254-14.96-8.142-29.101-23.452-29.101H203.76l-9.39-48h312.405c11.29 0 21.054-7.869 23.452-18.902l45.216-208C578.695 78.139 567.299 64 551.991 64zM208 472c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm256 0c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm23.438-200H184.98l-31.31-160h368.548l-34.78 160z" fill="currentColor"></path></svg>
                      Th√™m gi·ªè
                    </button>
                  </form>
                <% } else { %>
                  <button class="btn disabled" disabled>
                    <span>‚ùå</span>
                    H·∫øt h√†ng
                  </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<style>
.category-page {
  max-width: 1200px;
  margin: 0 auto;
}

.category-header {
  margin-bottom: 30px;
  padding-bottom: 20px;
  border-bottom: 2px solid var(--border);
}

.category-header h1 {
  margin: 0 0 12px 0;
  font-size: 32px;
  color: var(--fg);
}

.category-subtitle {
  margin: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--muted);
  font-size: 16px;
}

.back-link {
  color: var(--green);
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s;
}

.back-link:hover {
  color: var(--green-700);
  transform: translateX(-4px);
}

.empty-products {
  text-align: center;
  padding: 80px 20px;
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 12px;
}

.empty-icon {
  font-size: 80px;
  margin-bottom: 24px;
}

.empty-products h3 {
  margin: 0 0 12px 0;
  color: var(--fg);
  font-size: 24px;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 24px;
}

.product-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.product-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  border-color: var(--green);
}

.product-image {
  position: relative;
  height: 200px;
  overflow: hidden;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:hover .product-image img {
  transform: scale(1.05);
}

.product-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.product-card:hover .product-overlay {
  opacity: 1;
}

.quick-view {
  background: var(--green);
  color: white;
  border: none;
  padding: 12px 20px;
  border-radius: 8px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.2s;
}

.quick-view:hover {
  background: var(--green-700);
  transform: scale(1.05);
}

.product-info {
  padding: 20px;
}

.product-title {
  margin: 0 0 12px 0;
  font-size: 16px;
  font-weight: 600;
  line-height: 1.4;
}

.product-title a {
  color: var(--fg);
  text-decoration: none;
}

.product-title a:hover {
  color: var(--green);
}

.product-description {
  margin: 0 0 12px 0;
  color: var(--muted);
  font-size: 14px;
  line-height: 1.5;
}

.product-stock {
  margin-bottom: 16px;
  font-size: 12px;
  font-weight: 500;
}

.in-stock {
  color: #10b981;
}

.out-of-stock {
  color: #ef4444;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12px;
}

.product-price {
  flex: 1;
}

.price {
  font-size: 18px;
  font-weight: 700;
  color: var(--green);
}

.product-actions {
  display: flex;
  gap: 8px;
  align-items: center;
}

.wishlist-form {
  margin: 0;
}

.wishlist-btn {
  background: transparent;
  border: 1px solid var(--border);
  color: var(--muted);
  padding: 10px;
  min-width: 40px;
  transition: all 0.2s;
}

.wishlist-btn:hover {
  background: #ef4444;
  border-color: #dc2626;
  color: white;
  transform: scale(1.1);
}

.product-actions .btn {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 10px 16px;
  font-size: 14px;
  font-weight: 600;
}

.btn.disabled {
  opacity: 0.6;
  cursor: not-allowed;
  background: #6b7280;
  border-color: #6b7280;
}

@media (max-width: 768px) {
  .category-subtitle {
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
  }
  
  .products-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 16px;
  }
  
  .product-footer {
    flex-direction: column;
    align-items: stretch;
  }
  
  .product-actions {
    justify-content: space-between;
  }
  
  .product-actions .btn {
    flex: 1;
    justify-content: center;
  }
}
</style>


