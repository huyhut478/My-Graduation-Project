// Toggle wishlist via AJAX
async function toggleWishlist(productId, csrfToken) {
  const button = document.querySelector(`[data-product-id="${productId}"].wishlist-btn`);
  if (!button) return;
  
  // Disable button during request
  button.disabled = true;
  button.style.opacity = '0.6';
  
  try {
    const formData = new FormData();
    formData.append('_csrf', csrfToken);
    
    const response = await fetch(`/api/wishlist/toggle/${productId}`, {
      method: 'POST',
      body: formData,
      credentials: 'same-origin'
    });
    
    const data = await response.json();
    
    if (data.success) {
      // Update button icon based on action
      const icon = button.querySelector('span');
      if (data.action === 'added') {
