    // This event fires when animation restarts (every 30s)
  });
}

function carouselPause() {
  if (carouselSlider) {
    carouselSlider.classList.add('paused');
    carouselAutoPlay = false;
  }
}

function carouselResume() {
  if (carouselSlider && carouselAutoPlay && !isAnimating) {
    carouselSlider.classList.remove('paused');
    carouselSlider.classList.remove('smooth');
    // Restart animation
    carouselSlider.style.animation = 'none';
    setTimeout(() => {
      carouselSlider.style.animation = '';
      carouselSlider.classList.add('auto-scroll');
    }, 10);
  }
}

function carouselPrev() {
  if (!carouselSlider || isAnimating) return;
  
  isAnimating = true;
  carouselPause();
  
  // Use CSS transform for smooth manual navigation
  carouselSlider.classList.remove('auto-scroll');
  carouselSlider.classList.add('smooth');
  
  const currentTransform = getComputedStyle(carouselSlider).transform;
  const matrix = currentTransform !== 'none' 
    ? new DOMMatrix(currentTransform)
    : new DOMMatrix();
  let currentX = matrix.e || 0;
  
  const firstItem = carouselItems[0];
  const itemWidth = firstItem.offsetWidth + 24; // 24px gap
  
  currentX += itemWidth;
  
  // If at start of second set, jump to start of first set seamlessly
  const totalWidth = (carouselItems.length / 2) * itemWidth;
  if (currentX > 0) {
    currentX = -totalWidth + itemWidth;
  }
  
  carouselSlider.style.transform = `translateX(${currentX}px)`;
  
  setTimeout(() => {
    isAnimating = false;
    carouselResume();
  }, 600);
}

function carouselNext() {
  if (!carouselSlider || isAnimating) return;
  
  isAnimating = true;
  carouselPause();
  
