}

// Add to cart via AJAX
async function addToCart(productId, buyNow = false, csrfToken) {
  // Disable button during request
  const buttons = document.querySelectorAll(`[data-product-id="${productId}"][data-buy-now], [data-product-id="${productId}"].btn-buy-now, [data-product-id="${productId}"].btn-add-cart`);
  buttons.forEach(btn => {
    btn.disabled = true;
    btn.style.opacity = '0.6';
  });
  
  try {
    // Send as JSON (API route doesn't need CSRF, uses requireAuth)
    const response = await fetch(`/api/cart/add/${productId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        buy_now: buyNow
      }),
      credentials: 'same-origin'
    });
    
    const data = await response.json();
    
    if (data.success) {
      // If buy now, redirect immediately without adding to cart
      if (buyNow && data.buyNow) {
        window.location.href = data.redirect || '/checkout?buy_now=1';
        return; // Don't re-enable buttons if redirecting
      }
      
      // Update cart badge (only if not buy now)
      if (data.cart) {
        updateCartBadge(data.cart.totalQty);
      }
      
      // Show success message
      showToast(data.message, 'success');
    } else {
      // Show error message
      showToast(data.message, 'error');
    }
  } catch (error) {
    console.error('Error adding to cart:', error);
    showToast('C√≥ l·ªói x·∫£y ra. Vui l√≤ng th·ª≠ l·∫°i.', 'error');
  } finally {
    // Re-enable buttons
    buttons.forEach(btn => {
      btn.disabled = false;
      btn.style.opacity = '1';
    });
  }
}

