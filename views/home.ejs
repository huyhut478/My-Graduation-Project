async function applyFilters() {
  const params = new URLSearchParams();
  
  if (currentFilters.search) params.set('q', currentFilters.search);
  if (currentFilters.sort && currentFilters.sort !== 'newest') params.set('sort', currentFilters.sort);
  if (currentFilters.category) params.set('category', currentFilters.category);
  if (currentFilters.priceRange) params.set('price', currentFilters.priceRange);
  
  const url = params.toString() ? `/?${params.toString()}` : '/';
  
  // Show loading indicator
  const productsGrid = document.querySelector('.products-grid');
  const filtersRow = document.getElementById('filters-row');
  if (productsGrid) {
    productsGrid.style.opacity = '0.5';
    productsGrid.style.pointerEvents = 'none';
    productsGrid.style.transition = 'opacity 0.3s ease';
  }
  if (filtersRow) {
    filtersRow.style.opacity = '0.7';
    filtersRow.style.pointerEvents = 'none';
  }
  
  try {
    // Fetch filtered products via AJAX
    const response = await fetch(`/api/products/filter?${params.toString()}`);
    const data = await response.json();
    
    if (data.success) {
      // Update products grid
      if (productsGrid) {
        productsGrid.innerHTML = data.html;
        productsGrid.style.opacity = '1';
        productsGrid.style.pointerEvents = 'auto';
        
        // Smooth scroll to top of products
        setTimeout(() => {
          productsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }, 100);
      }
      if (filtersRow) {
        filtersRow.style.opacity = '1';
        filtersRow.style.pointerEvents = 'auto';
      }
      
      // Update URL without reload
      window.history.pushState({}, '', url);
      
      // Update page title if needed
      if (data.count === 0) {
        showToast('Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m n√†o', 'info');
      }
    } else {
      throw new Error('Failed to filter products');
    }
  } catch (error) {
    console.error('Error filtering products:', error);
    showToast('C√≥ l·ªói x·∫£y ra khi l·ªçc s·∫£n ph·∫©m', 'error');
    
    // Restore grid
    if (productsGrid) {
      productsGrid.style.opacity = '1';
      productsGrid.style.pointerEvents = 'auto';
    }
    if (filtersRow) {
      filtersRow.style.opacity = '1';
      filtersRow.style.pointerEvents = 'auto';
    }
  }
}

