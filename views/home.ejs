      showToast(data.message, 'error');
    }
  } catch (error) {
    console.error('Error toggling wishlist:', error);
    showToast('C√≥ l·ªói x·∫£y ra. Vui l√≤ng th·ª≠ l·∫°i.', 'error');
  } finally {
    button.disabled = false;
    button.style.opacity = '1';
