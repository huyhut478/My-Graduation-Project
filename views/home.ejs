function initCarousel() {
  carouselSlider = document.getElementById('carousel-slider');
  if (!carouselSlider) return;
  
  carouselItems = carouselSlider.querySelectorAll('.carousel-item');
  if (carouselItems.length === 0) return;
  
  // Add auto-scroll class for CSS animation
  carouselSlider.classList.add('auto-scroll');
  
  // Handle seamless infinite loop - when animation completes, reset without jarring
