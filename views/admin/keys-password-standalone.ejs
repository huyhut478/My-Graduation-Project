    }

    .error-message {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 16px 20px;
      background: rgba(239, 68, 68, 0.15);
      border: 2px solid rgba(239, 68, 68, 0.4);
      border-radius: 10px;
      color: #ef4444;
      margin-bottom: 30px;
      font-size: 15px;
      font-weight: 500;
    }

    .error-icon {
      font-size: 20px;
      flex-shrink: 0;
    }

    .password-form {
      margin-bottom: 30px;
    }

    .form-group {
      margin-bottom: 24px;
    }

    .form-group label {
      display: block;
      margin-bottom: 10px;
      color: var(--fg, #e5e7eb);
      font-weight: 600;
      font-size: 15px;
    }

    .password-input {
      width: 100%;
      padding: 16px 20px;
      border: 2px solid #334155 !important;
      border-radius: 12px;
      background: #0f172a !important;
      color: #e5e7eb !important;
      font-size: 16px;
      font-family: inherit;
      transition: all 0.3s ease;
      box-sizing: border-box;
    }

    .password-input:focus {
      outline: none !important;
      border-color: #16a34a !important;
      box-shadow: 0 0 0 4px rgba(22, 163, 74, 0.15);
      background: #1e293b !important;
    }

    .password-input::placeholder {
      color: #6b7280 !important;
    }

    .btn-submit {
      width: 100%;
      padding: 16px 24px;
      border: none;
      border-radius: 12px;
      font-size: 17px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      background: #16a34a;
      color: white;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-submit:hover {
      background: #15803d;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(22, 163, 74, 0.4);
    }

    .btn-submit:active {
      transform: translateY(0);
    }

    .password-footer {
      text-align: center;
      padding-top: 24px;
      border-top: 2px solid var(--border, #334155);
      margin-top: 24px;
    }

    .btn-back {
      display: inline-block;
      padding: 12px 24px;
      background: transparent;
      border: 2px solid #334155 !important;
      border-radius: 10px;
      color: #e5e7eb !important;
      text-decoration: none;
      font-size: 15px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-back:hover {
      background: rgba(255, 255, 255, 0.05) !important;
      border-color: #16a34a !important;
      color: #16a34a !important;
      transform: translateX(-4px);
    }

    @media (max-width: 768px) {
      body {
        padding: 15px !important;
      }
      
      .password-box {
