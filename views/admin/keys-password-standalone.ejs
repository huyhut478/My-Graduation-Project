      }
      
      .password-subtitle {
        font-size: 14px;
      }
    }

    /* Force override any conflicting styles */
    .keys-password-page * {
      box-sizing: border-box;
    }

    /* Ensure form elements are visible */
    .form-group label {
      color: #e5e7eb !important;
      display: block !important;
    }
  </style>
</head>
