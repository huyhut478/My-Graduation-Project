<div class="admin-product-edit">
  <div class="edit-header">
    <h1>Sửa sản phẩm</h1>
    <a href="/admin/products" class="btn-back">← Quay lại danh sách</a>
  </div>

  <% if (typeof flash !== 'undefined' && flash.error && flash.error.length) { %>
    <div class="error-message">
      <%= flash.error.join('<br/>') %>
    </div>
  <% } %>

  <% if (typeof flash !== 'undefined' && flash.success && flash.success.length) { %>
    <div class="success-message">
      <%= flash.success.join('<br/>') %>
    </div>
  <% } %>

  <form action="/admin/products/<%= product.id %>/edit?_csrf=<%= csrfToken %>" method="post" class="product-edit-form">
    <div class="form-sections">
      <!-- Basic Information Section -->
      <div class="form-section">
        <h2 class="section-title">Thông tin cơ bản</h2>
        <div class="form-grid">
          <div class="form-group full-width">
            <label for="title">
              <span class="label-text">Tiêu đề sản phẩm</span>
              <span class="label-required">*</span>
            </label>
            <input type="text" id="title" name="title" value="<%= product.title %>" required 
                   placeholder="Ví dụ: Windows 11 Pro Key" />
            <small class="form-hint">Tên sản phẩm sẽ hiển thị trên trang web</small>
          </div>

          <div class="form-group">
            <label for="slug">
              <span class="label-text">Slug (URL)</span>
              <span class="label-required">*</span>
            </label>
            <input type="text" id="slug" name="slug" value="<%= product.slug %>" required 
                   placeholder="windows-11-pro-key" />
            <small class="form-hint">URL thân thiện cho sản phẩm</small>
          </div>

          <div class="form-group">
            <label for="category_id">
              <span class="label-text">Danh mục</span>
            </label>
            <select id="category_id" name="category_id">
              <option value="">-- Chọn danh mục --</option>
              <% categories.forEach(c => { %>
                <option value="<%= c.id %>" <%= product.category_id === c.id ? 'selected' : '' %>>
                  <%= c.name %>
                </option>
              <% }) %>
            </select>
            <small class="form-hint">Phân loại sản phẩm</small>
          </div>

          <div class="form-group full-width">
            <label for="description">
              <span class="label-text">Mô tả sản phẩm</span>
            </label>
            <textarea id="description" name="description" rows="4" 
                      placeholder="Mô tả chi tiết về sản phẩm..."><%= product.description || '' %></textarea>
            <small class="form-hint">Thông tin chi tiết về sản phẩm</small>
          </div>
        </div>
      </div>

      <!-- Pricing & Stock Section -->
      <div class="form-section">
        <h2 class="section-title">Giá cả & Tồn kho</h2>
        <div class="form-grid">
          <div class="form-group">
            <label for="price_vnd">
              <span class="label-text">Giá bán (VND)</span>
              <span class="label-required">*</span>
            </label>
            <div class="input-with-icon">
              <span class="input-icon">₫</span>
              <input type="number" id="price_vnd" name="price_vnd" 
                     value="<%= Math.round(product.price_cents / 100) %>" 
                     min="0" step="1" required 
                     placeholder="399000" />
            </div>
            <small class="form-hint">Nhập giá bằng VND (ví dụ: 399000 cho 399.000 VND)</small>
          </div>

          <div class="form-group">
            <label for="discount_percent">
              <span class="label-text">% Khuyến mãi</span>
            </label>
            <div class="input-with-icon">
              <input type="number" id="discount_percent" name="discount_percent"
                     value="<%= (product.discount_percent || 0) %>"
                     min="0" max="100" step="1" placeholder="0" />
            </div>
            <small class="form-hint">Nhập % khuyến mãi (0-100). Ví dụ: 20 là giảm 20%.</small>
          </div>

          <div class="form-group">
            <label for="stock">
              <span class="label-text">Số lượng tồn kho</span>
            </label>
            <div class="input-with-icon">
              <span class="input-icon"></span>
              <input type="number" id="stock" name="stock" 
                     value="<%= product.stock %>" 
                     min="0" step="1" 
                     placeholder="100" />
            </div>
            <small class="form-hint">Số lượng sản phẩm còn trong kho</small>
          </div>
        </div>
      </div>

      <!-- Media Section -->
      <div class="form-section">
        <h2 class="section-title">Hình ảnh & Download</h2>
        <div class="form-grid">
          <div class="form-group full-width">
            <label for="image">
              <span class="label-text">URL ảnh sản phẩm</span>
            </label>
            <input type="url" id="image" name="image" 
                   value="<%= product.image || '' %>" 
                   placeholder="https://example.com/image.jpg" />
            <small class="form-hint">Đường dẫn đến ảnh sản phẩm (để trống sẽ dùng ảnh mặc định)</small>
            <% if (product.image) { %>
              <div class="image-preview">
                <img src="<%= product.image %>" alt="Preview" onerror="this.style.display='none'" />
              </div>
            <% } %>
          </div>

          <div class="form-group full-width">
            <label for="download_link">
              <span class="label-text">Link tải file</span>
            </label>
            <input type="url" id="download_link" name="download_link" 
                   value="<%= product.download_link || '' %>" 
                   placeholder="https://example.com/file.zip" />
            <small class="form-hint">Đường dẫn đến file tải (ví dụ: link Google Drive, OneDrive, Mega, ...)</small>
          </div>
        </div>
      </div>

      <!-- Settings Section -->
      <div class="form-section">
  <h2 class="section-title">⚙️ Cài đặt</h2>
  <div class="form-grid">
    <div class="form-group">
      <label for="active">
        <span class="label-text">Trạng thái hiển thị</span>
      </label>
      <select id="active" name="active">
        <option value="1" <%= product.active ? 'selected' : '' %>>✅ Hiển thị</option>
        <option value="0" <%= !product.active ? 'selected' : '' %>>❌ Ẩn</option>
      </select>
      <small class="form-hint">Sản phẩm có hiển thị trên website không</small>
    </div>

    <div class="form-group">
      <label for="featured">
        <span class="label-text">Sản phẩm nổi bật</span>
      </label>
      <select id="featured" name="featured">
        <option value="1" <%= product.featured ? 'selected' : '' %>>🔥 Nổi bật</option>
        <option value="0" <%= !product.featured ? 'selected' : '' %>>⚪ Bình thường</option>
      </select>
      <small class="form-hint">Hiển thị sản phẩm ở trang chủ</small>
    </div>
  </div>
</div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn primary large">
        <span>💾</span>
        Lưu thay đổi
      </button>
      <a href="/admin/products" class="btn secondary">
        <span>❌</span>
        Hủy
      </a>
    </div>
  </form>
</div>

<style>
.admin-product-edit {
  max-width: 1000px;
  margin: 0 auto;
  padding: 20px;
}

.edit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  flex-wrap: wrap;
  gap: 16px;
}

.edit-header h1 {
  margin: 0;
  font-size: 28px;
  color: var(--fg);
}

.btn-back {
  padding: 10px 16px;
  background: transparent;
  border: 1px solid var(--border);
  border-radius: 8px;
  color: var(--fg);
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-back:hover {
  background: var(--card);
  border-color: var(--green);
  color: var(--green);
}

.product-edit-form {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 30px;
}

.form-sections {
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.form-section {
  padding-bottom: 30px;
  border-bottom: 1px solid var(--border);
}

.form-section:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.section-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--fg);
  margin: 0 0 20px 0;
  padding-bottom: 12px;
  border-bottom: 2px solid var(--green);
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  display: flex;
  align-items: center;
  gap: 4px;
  font-weight: 500;
  color: var(--fg);
  font-size: 14px;
}

.label-text {
  display: flex;
  align-items: center;
  gap: 6px;
}

.label-required {
  color: #ef4444;
  font-weight: 600;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: 12px;
  border: 1px solid var(--border);
  border-radius: 8px;
  background: var(--bg);
  color: var(--fg);
  font-size: 14px;
  font-family: inherit;
  transition: all 0.2s;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--green);
  box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.1);
}

.form-hint {
  font-size: 12px;
  color: var(--muted);
  margin-top: -4px;
}

.input-with-icon {
  position: relative;
}

.input-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 16px;
  color: var(--muted);
  pointer-events: none;
}

.input-with-icon input {
  padding-left: 36px;
}

.image-preview {
  margin-top: 12px;
  padding: 12px;
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: 8px;
  max-width: 200px;
}

.image-preview img {
  width: 100%;
  height: auto;
  border-radius: 4px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s;
}

.checkbox-label:hover {
  border-color: var(--green);
  background: rgba(22, 163, 74, 0.05);
}

.checkbox-input {
  width: 20px;
  height: 20px;
  cursor: pointer;
  accent-color: var(--green);
}

.checkbox-text {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 500;
  color: var(--fg);
}

.checkbox-icon {
  font-size: 18px;
}

.form-actions {
  display: flex;
  gap: 12px;
  margin-top: 30px;
  padding-top: 30px;
  border-top: 2px solid var(--border);
}

.btn {
  padding: 12px 24px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  transition: all 0.2s;
}

.btn.primary {
  background: var(--green);
  color: white;
}

.btn.primary:hover {
  background: #16a34a;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(22, 163, 74, 0.3);
}

.btn.secondary {
  background: transparent;
  border: 1px solid var(--border);
  color: var(--fg);
}

.btn.secondary:hover {
  background: var(--card);
  border-color: var(--green);
  color: var(--green);
}

.btn.large {
  padding: 14px 28px;
  font-size: 16px;
}

.error-message,
.success-message {
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 20px;
}

.error-message {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: #ef4444;
}

.success-message {
  background: rgba(22, 163, 74, 0.1);
  border: 1px solid rgba(22, 163, 74, 0.3);
  color: var(--green);
}

@media (max-width: 768px) {
  .form-grid {
    grid-template-columns: 1fr;
  }

  .edit-header {
    flex-direction: column;
    align-items: stretch;
  }

  .form-actions {
    flex-direction: column;
  }

  .btn {
    width: 100%;
    justify-content: center;
  }
}
</style>

<script>
// Auto-generate slug from title
document.getElementById('title').addEventListener('input', function() {
  const title = this.value;
  const slugInput = document.getElementById('slug');
  
  if (slugInput.value === '' || slugInput.dataset.autoGenerated === 'true') {
    const slug = title
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .replace(/[^a-z0-9\s-]/g, '')
      .replace(/\s+/g, '-')
      .replace(/-+/g, '-')
      .trim();
    slugInput.value = slug;
    slugInput.dataset.autoGenerated = 'true';
  }
});

document.getElementById('slug').addEventListener('input', function() {
  this.dataset.autoGenerated = 'false';
});
</script>
