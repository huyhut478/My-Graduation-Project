<script>
document.addEventListener('DOMContentLoaded', function() {
  // CSRF token for AJAX requests - read from meta tag
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
  // Copy key functionality
  document.querySelectorAll('.btn-copy[data-key-value]').forEach(button => {
    button.addEventListener('click', function() {
      const keyValue = this.getAttribute('data-key-value');
      if (!keyValue) return;
      
      // Try modern clipboard API first
      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(keyValue).then(() => {
          const originalText = this.textContent;
          const originalBg = this.style.background;
          this.textContent = '‚úÖ';
          this.style.background = '#10b981';
          setTimeout(() => {
            this.textContent = originalText;
            this.style.background = originalBg || '';
          }, 2000);
        }).catch(err => {
          console.error('Failed to copy:', err);
          fallbackCopy(keyValue, this);
        });
      } else {
        // Fallback for older browsers
        fallbackCopy(keyValue, this);
      }
    });
  });

  // Fallback copy method
  function fallbackCopy(text, button) {
    const textArea = document.createElement('textarea');
    textArea.value = text;
    textArea.style.position = 'fixed';
    textArea.style.left = '-999999px';
    textArea.style.top = '-999999px';
    document.body.appendChild(textArea);
    textArea.focus();
    textArea.select();
    
    try {
      const successful = document.execCommand('copy');
      if (successful) {
        const originalText = button.textContent;
        const originalBg = button.style.background;
        button.textContent = '‚úÖ';
        button.style.background = '#10b981';
        setTimeout(() => {
          button.textContent = originalText;
          button.style.background = originalBg || '';
        }, 2000);
      } else {
        alert('Kh√¥ng th·ªÉ sao ch√©p. Vui l√≤ng sao ch√©p th·ªß c√¥ng: ' + text);
      }
    } catch (err) {
      console.error('Fallback copy failed:', err);
      alert('Kh√¥ng th·ªÉ sao ch√©p. Key: ' + text);
    } finally {
      document.body.removeChild(textArea);
    }
  }

  // AJAX form submission for saving keys (no page reload)
  document.querySelectorAll('.add-key-form').forEach(form => {
    const input = form.querySelector('.key-input');
    const button = form.querySelector('.btn-add');
    const productId = form.getAttribute('data-product-id');
    
    if (!input || !button || !productId) return;

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const keyValue = input.value.trim();
      if (!keyValue) {
        input.focus();
        return false;
      }

      // Disable button during request
      const originalButtonText = button.textContent;
      button.disabled = true;
      button.textContent = '‚è≥ ƒêang l∆∞u...';

      try {
        const response = await fetch(`/admin/products/${productId}/key`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken
          },
          body: JSON.stringify({ key_value: keyValue, _csrf: csrfToken })
        });

        const data = await response.json();

        if (data.success) {
          // Show success state
          button.textContent = '‚úÖ ƒê√£ l∆∞u!';
          button.style.background = '#10b981';

          const keyId = data.keyId;
          const keyDisplay = form.closest('.product-key-section').querySelector('.key-display');
          const noKeyMessage = form.closest('.product-key-section').querySelector('.no-key-message');

          const newKeyRowHTML = `
            <div class="key-row" data-key-id="${keyId}">
              <div class="key-info">
                <div class="key-preview-wrapper">
                  <code class="key-value collapsed" data-key-value="${keyValue}">${keyValue.length > 28 ? keyValue.substring(0,28) + '...' : keyValue}</code>
                  <button class="btn-toggle-key" type="button" aria-expanded="false" title="Hi·ªÉn th·ªã to√†n b·ªô key">Hi·ªán</button>
                </div>
              </div>
              <div class="key-actions">
                <button class="btn-copy" data-key-value="${keyValue}" type="button" title="Sao ch√©p">üìã</button>
                <form action="/admin/products/${productId}/key/${keyId}/delete?_csrf=<%= csrfToken %>" method="post" style="display:inline;">
                  <button type="submit" class="btn-delete" title="X√≥a key">üóëÔ∏è</button>
                </form>
              </div>
            </div>
          `;

          if (keyDisplay) {
            // append new key row
            keyDisplay.insertAdjacentHTML('afterbegin', newKeyRowHTML);
          } else if (noKeyMessage) {
            noKeyMessage.outerHTML = `<div class="key-display">${newKeyRowHTML}</div>`;
          }

          // attach handlers for the newly inserted elements
          const newSection = form.closest('.product-key-section');
          const insertedRow = newSection.querySelector(`.key-row[data-key-id="${keyId}"]`);
          if (insertedRow) {
            const copyBtn = insertedRow.querySelector('.btn-copy');
            if (copyBtn) {
              copyBtn.addEventListener('click', function() {
                const keyVal = this.getAttribute('data-key-value');
                if (navigator.clipboard && navigator.clipboard.writeText) {
                  navigator.clipboard.writeText(keyVal).then(() => {
                    const originalText = this.textContent;
                    const originalBg = this.style.background;
                    this.textContent = '‚úÖ';
                    this.style.background = '#10b981';
                    setTimeout(() => {
                      this.textContent = originalText;
                      this.style.background = originalBg || '';
                    }, 2000);
                  });
                }
              });
            }

            const toggleBtn = insertedRow.querySelector('.btn-toggle-key');
            if (toggleBtn) {
              toggleBtn.addEventListener('click', function() {
                const wrapper = this.closest('.key-preview-wrapper');
                const code = wrapper?.querySelector('.key-value');
                if (!code) return;
                const expanded = this.getAttribute('aria-expanded') === 'true';
                if (expanded) {
                  code.classList.add('collapsed');
                  this.setAttribute('aria-expanded', 'false');
                  this.textContent = 'Hi·ªán';
                } else {
                  code.classList.remove('collapsed');
                  this.setAttribute('aria-expanded', 'true');
                  this.textContent = '·∫®n';
                }
              });
            }
          }

          // Reset input and button state
          input.value = '';
          setTimeout(() => {
            button.style.background = '';
            button.disabled = false;
            button.textContent = '‚ûï Th√™m Key';
          }, 800);
        } else {
          throw new Error(data.error || 'C√≥ l·ªói x·∫£y ra');
        }
      } catch (error) {
        console.error('Error saving key:', error);
        button.textContent = '‚ùå L·ªói!';
        button.style.background = '#ef4444';
        alert('L·ªói khi l∆∞u key: ' + error.message);
        
        setTimeout(() => {
          button.textContent = originalButtonText;
          button.style.background = '';
          button.disabled = false;
        }, 3000);
      }
    });
  });

  // AJAX delete key
  // Delegate delete handlers (supports dynamic rows)
  document.querySelectorAll('.product-key-section').forEach(section => {
    section.addEventListener('submit', async function(e) {
      const form = e.target;
      if (!form || !form.getAttribute('action') || !form.getAttribute('action').includes('/key/')) return;
      e.preventDefault();

      if (!confirm('X√≥a key n√†y?')) return;

      const actionUrl = form.getAttribute('action');
      const m = actionUrl.match(/\/products\/(\d+)\/key\/(\d+)\/delete/);
      if (!m) return alert('URL x√≥a kh√¥ng h·ª£p l·ªá');
      const productId = m[1];
      const keyId = m[2];

      const button = form.querySelector('.btn-delete');
      if (button) {
        button.disabled = true;
        button.textContent = '‚è≥';
      }

      try {
        const response = await fetch(`/admin/products/${productId}/key/${keyId}/delete`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken
          },
          body: JSON.stringify({ _csrf: csrfToken })
        });

        const data = await response.json();
        if (data.success) {
          // remove the specific key row
          const row = section.querySelector(`.key-row[data-key-id="${keyId}"]`);
          if (row) row.remove();

          // if no keys left, show no-key-message
          const remaining = section.querySelectorAll('.key-row');
          if (!remaining || remaining.length === 0) {
            const keyDisplay = section.querySelector('.key-display');
            if (keyDisplay) {
              keyDisplay.outerHTML = `\n                <div class="no-key-message">\n                  <p>‚ö†Ô∏è S·∫£n ph·∫©m ch∆∞a c√≥ key</p>\n                </div>\n              `;
            }
            const input = section.querySelector('.key-input');
            if (input) input.value = '';
            const addButton = section.querySelector('.btn-add');
            if (addButton) addButton.textContent = '‚ûï Th√™m Key';
          }
        } else {
          throw new Error(data.error || 'C√≥ l·ªói x·∫£y ra');
        }
      } catch (error) {
        console.error('Error deleting key:', error);
        alert('L·ªói khi x√≥a key: ' + error.message);
        if (button) {
          button.disabled = false;
          button.textContent = 'üóëÔ∏è';
        }
      }
    });
  });

  // Attach toggle handlers for existing key preview toggles
  document.querySelectorAll('.btn-toggle-key').forEach(btn => {
    btn.addEventListener('click', function() {
      const wrapper = this.closest('.key-preview-wrapper');
      if (!wrapper) return;
      const code = wrapper.querySelector('.key-value');
      if (!code) return;

      const expanded = this.getAttribute('aria-expanded') === 'true';
      if (expanded) {
        code.classList.add('collapsed');
        this.setAttribute('aria-expanded', 'false');
        this.textContent = 'Hi·ªán';
      } else {
        code.classList.remove('collapsed');
        this.setAttribute('aria-expanded', 'true');
        this.textContent = '·∫®n';
      }
    });
  });

  // Toggle keys group (collapse/expand)
  document.querySelectorAll('.btn-toggle-keys-group').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const productId = this.getAttribute('data-product-id');
      const keyDisplay = document.querySelector(`.key-display[data-product-id="${productId}"]`);
      if (!keyDisplay) return;

      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      const allRows = keyDisplay.querySelectorAll('.key-row');
      const totalKeys = allRows.length;

      if (isExpanded) {
        // Collapse - show only first 3
        allRows.forEach((row, idx) => {
          row.style.display = idx < 3 ? '' : 'none';
        });
        this.setAttribute('aria-expanded', 'false');
        this.querySelector('.toggle-text').textContent = `Hi·ªÉn th·ªã t·∫•t c·∫£ (${totalKeys} key)`;
      } else {
        // Expand - show all
        allRows.forEach(row => {
          row.style.display = '';
        });
        this.setAttribute('aria-expanded', 'true');
        this.querySelector('.toggle-text').textContent = '·∫®n b·ªõt';
      }
    });
  });
});
</script>

