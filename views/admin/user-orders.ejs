<div class="admin-user-orders">
  <div class="orders-header">
    <div class="header-content">
      <div>
        <h1>üìã L·ªãch s·ª≠ giao d·ªãch</h1>
        <p class="header-subtitle">Ng∆∞·ªùi d√πng: <strong><%= user.name %></strong> (<%= user.email %>)</p>
      </div>
      <div class="header-actions">
        <a href="/admin/users" class="btn-back">‚Üê Quay l·∫°i</a>
      </div>
    </div>
  </div>

  <% if (typeof flash !== 'undefined' && flash.success && flash.success.length) { %>
    <div class="success-message">
      <%= flash.success.join('<br/>') %>
    </div>
  <% } %>

  <% if (typeof flash !== 'undefined' && flash.error && flash.error.length) { %>
    <div class="error-message">
      <%= flash.error.join('<br/>') %>
    </div>
  <% } %>

  <div class="user-info-card">
    <div class="info-row">
      <div class="info-item">
        <span class="info-label">T·ªïng s·ªë ƒë∆°n h√†ng:</span>
        <span class="info-value"><%= orders.length %></span>
      </div>
      <div class="info-item">
        <span class="info-label">T·ªïng chi ti√™u:</span>
        <span class="info-value">
          <%= ((orders.filter(o => o.status === 'paid' || o.status === 'completed').reduce((sum, o) => sum + (o.total_cents || 0), 0)) / 100).toLocaleString('vi-VN', {style:'currency',currency:'VND'}) %>
        </span>
      </div>
      <div class="info-item">
        <span class="info-label">Ng√†y ƒëƒÉng k√Ω:</span>
        <span class="info-value"><%= new Date(user.created_at).toLocaleDateString('vi-VN') %></span>
      </div>
    </div>
  </div>

  <% if (!orders || orders.length === 0) { %>
    <div class="empty-orders">
      <div class="empty-icon">üì≠</div>
      <h3>Ng∆∞·ªùi d√πng n√†y ch∆∞a c√≥ giao d·ªãch n√†o</h3>
    </div>
  <% } else { %>
    <div class="orders-grid">
      <% orders.forEach(o => { %>
        <div class="order-card">
          <div class="order-header">
            <div class="order-info">
              <h3 class="order-number">Giao d·ªãch #<%= o.id %></h3>
              <p class="order-date">
                <span>üìÖ</span>
                <strong><%= new Date(o.created_at).toLocaleDateString('vi-VN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></strong>
                <span style="margin: 0 8px;">‚Ä¢</span>
                <span><%= new Date(o.created_at).toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' }) %></span>
              </p>
            </div>
            <div class="order-status">
              <%
                const statusConfig = {
                  'pending': { label: 'Ch·ªù thanh to√°n', color: '#f59e0b', icon: '‚è≥' },
                  'paid': { label: 'ƒê√£ thanh to√°n th√†nh c√¥ng', color: '#10b981', icon: '‚úÖ' },
                  'completed': { label: 'Ho√†n th√†nh', color: '#10b981', icon: '‚úÖ' },
                  'cancelled': { label: 'ƒê√£ h·ªßy', color: '#ef4444', icon: '‚ùå' },
                  'failed': { label: 'Thanh to√°n th·∫•t b·∫°i', color: '#ef4444', icon: '‚ùå' }
                };
                const status = statusConfig[o.status || 'pending'] || statusConfig['pending'];
                const bgColor = status.color + '20';
                const textColor = status.color;
              %>
              <span class="status-badge" 
                    style="background-color: <%= bgColor %>; color: <%= textColor %>; border: 1px solid <%= textColor %>;">
                <span><%= status.icon %></span>
                <%= status.label %>
              </span>
            </div>
          </div>
          
          <div class="order-items">
            <h4 class="items-title">üì¶ S·∫£n ph·∫©m ƒë√£ mua:</h4>
            <div class="items-list">
              <% (itemsByOrder[o.id] || []).forEach(it => { %>
                <div class="order-item">
                  <% if (it.image) { %>
                    <div class="item-image">
                      <img src="<%= it.image %>" alt="<%= it.title %>" />
                    </div>
                  <% } %>
                  <div class="item-info">
                    <strong class="item-title"><%= it.title %></strong>
                    <div class="item-details">
                      <span class="item-meta">S·ªë l∆∞·ª£ng: <strong><%= it.quantity %></strong></span>
                      <span class="item-meta">Gi√°: <strong><%= (it.price_cents/100).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %></strong></span>
                    </div>
                    <div class="item-subtotal">
                      Th√†nh ti·ªÅn: <strong><%= ((it.price_cents * it.quantity)/100).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %></strong>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
            
            <!-- Show keys for paid/completed orders -->
            <% if (o.status === 'paid' || o.status === 'completed') { %>
              <% const hasKeys = (itemsByOrder[o.id] || []).some(it => keysByOrderItem && keysByOrderItem[it.id] && keysByOrderItem[it.id].length > 0); %>
              <% if (hasKeys) { %>
                <div class="order-keys-section">
                  <h5 class="keys-title">üîë Key c·ªßa s·∫£n ph·∫©m</h5>
                  <div class="keys-list">
                    <% (itemsByOrder[o.id] || []).forEach(it => { %>
                      <% if (keysByOrderItem && keysByOrderItem[it.id] && keysByOrderItem[it.id].length > 0) { %>
                        <% keysByOrderItem[it.id].forEach((keyValue, index) => { %>
                          <div class="key-item">
                            <div class="key-content">
                              <div class="key-label">üîë Key <%= it.quantity > 1 ? (index + 1) : '' %>: <%= it.title %></div>
                              <code class="key-value"><%= keyValue %></code>
                            </div>
                          </div>
                        <% }) %>
                      <% } %>
                    <% }) %>
                  </div>
                </div>
              <% } %>
            <% } %>
          </div>
          
          <div class="order-footer">
            <div class="order-total">
              <strong>T·ªïng c·ªông:</strong>
              <span class="total-price"><%= ((o.total_cents || 0)/100).toLocaleString('vi-VN',{style:'currency',currency:'VND'}) %></span>
            </div>
            <div class="order-payment">
              <span class="payment-method">Ph∆∞∆°ng th·ª©c: <%= o.payment_method || '-' %></span>
              <% if (o.payment_trans_id) { %>
                <span class="payment-trans-id">M√£ giao d·ªãch: <%= o.payment_trans_id %></span>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

