<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script type="application/json" id="chart-data"><%- JSON.stringify(chartData) %></script>
<script type="application/json" id="monthly-data"><%- JSON.stringify(monthlyData) %></script>
<script>
const chartData = JSON.parse(document.getElementById('chart-data').textContent);
const monthlyData = JSON.parse(document.getElementById('monthly-data').textContent);

// Set success rate
document.addEventListener('DOMContentLoaded', function() {
  const rateValue = document.querySelector('.rate-value');
  const rateFill = document.querySelector('.rate-fill');
  if (rateValue && rateFill) {
    const rate = parseFloat(rateValue.getAttribute('data-rate') || 0);
    const width = parseFloat(rateFill.getAttribute('data-width') || 0);
    rateValue.textContent = rate + '%';
    rateFill.style.width = width + '%';
  }
});

// Daily Chart
const dailyCtx = document.getElementById('dailyChart');
if (dailyCtx && chartData.length > 0) {
  new Chart(dailyCtx, {
    type: 'line',
    data: {
      labels: chartData.map(d => {
        const date = new Date(d.date);
        return date.toLocaleDateString('vi-VN', { day: '2-digit', month: '2-digit' });
      }),
      datasets: [{
        label: 'Doanh thu (VND)',
        data: chartData.map(d => d.revenue),
        borderColor: '#16a34a',
        backgroundColor: 'rgba(22, 163, 74, 0.1)',
        tension: 0.4,
        fill: true
      }, {
        label: 'S·ªë ƒë∆°n h√†ng',
        data: chartData.map(d => d.orders),
        borderColor: '#3b82f6',
        backgroundColor: 'rgba(59, 130, 246, 0.1)',
        tension: 0.4,
        fill: true,
        yAxisID: 'y1'
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: true,
      plugins: {
        legend: {
          labels: {
            color: '#e5e7eb'
          }
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            color: '#9ca3af',
            callback: function(value) {
              return value.toLocaleString('vi-VN') + ' VND';
            }
          },
          grid: {
            color: 'rgba(255, 255, 255, 0.1)'
          }
        },
        y1: {
          type: 'linear',
          display: true,
          position: 'right',
          beginAtZero: true,
          ticks: {
            color: '#9ca3af'
          },
          grid: {
            drawOnChartArea: false
          }
        },
        x: {
          ticks: {
            color: '#9ca3af'
          },
          grid: {
            color: 'rgba(255, 255, 255, 0.1)'
          }
        }
      }
    }
  });
}

// Monthly Chart
const monthlyCtx = document.getElementById('monthlyChart');
if (monthlyCtx && monthlyData.length > 0) {
  new Chart(monthlyCtx, {
    type: 'bar',
    data: {
      labels: monthlyData.map(d => {
        const [year, month] = d.month.split('-');
        return `Th√°ng ${month}/${year}`;
      }),
      datasets: [{
        label: 'Doanh thu (VND)',
        data: monthlyData.map(d => d.revenue),
        backgroundColor: 'rgba(22, 163, 74, 0.6)',
        borderColor: '#16a34a',
        borderWidth: 2
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: true,
      plugins: {
        legend: {
          labels: {
            color: '#e5e7eb'
          }
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            color: '#9ca3af',
            callback: function(value) {
              return value.toLocaleString('vi-VN') + ' VND';
            }
          },
          grid: {
            color: 'rgba(255, 255, 255, 0.1)'
          }
        },
        x: {
          ticks: {
            color: '#9ca3af'
          },
          grid: {
            color: 'rgba(255, 255, 255, 0.1)'
          }
        }
      }
    }
  });
}
</script>

<style>
.admin-revenue {
  max-width: 1400px;
