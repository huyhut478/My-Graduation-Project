  background: var(--card);
  color: var(--fg);
  font-size: 14px;
}

.charts-section {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
  gap: 24px;
}

.chart-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 24px;
}

.chart-card h3 {
  margin: 0 0 20px 0;
  font-size: 18px;
  color: var(--fg);
  border-bottom: 2px solid var(--green);
  padding-bottom: 12px;
}

.chart-container {
  position: relative;
