  margin-top: 20px;
}

.chart-card canvas {
  max-height: 400px;
}

.additional-stats {
  margin-bottom: 24px;
}

.stat-box {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 24px;
}

.stat-box h3 {
  margin: 0 0 20px 0;
  font-size: 18px;
  color: var(--fg);
  border-bottom: 2px solid var(--green);
  padding-bottom: 12px;
}

.success-rate {
  text-align: center;
}

.rate-value {
  font-size: 48px;
  font-weight: 700;
  color: var(--green);
  margin-bottom: 16px;
}

.rate-bar {
  width: 100%;
  height: 24px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 12px;
  position: relative;
}

.rate-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--green), #10b981);
  border-radius: 12px;
  transition: width 0.5s ease;
  position: relative;
}

.rate-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.rate-label {
  color: var(--muted);
  font-size: 14px;
}

@media (max-width: 968px) {
  .charts-section {
    grid-template-columns: 1fr;
  }
}
</style>

