}

.revenue-stats .stat-label {
  color: var(--muted);
  font-size: 13px;
  margin-bottom: 6px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.revenue-stats .stat-value {
  font-size: 28px;
