}

.revenue-stats .stat-sublabel {
  color: var(--muted);
  font-size: 11px;
  opacity: 0.7;
}

.revenue-stats .stat-card.success {
  border-color: #10b981;
  background: rgba(22, 163, 74, 0.05);
}

.revenue-stats .stat-card.warning {
  border-color: #f59e0b;
  background: rgba(245, 158, 11, 0.05);
}

.revenue-stats .stat-card.danger {
  border-color: #ef4444;
  background: rgba(239, 68, 68, 0.05);
}

.revenue-filters {
