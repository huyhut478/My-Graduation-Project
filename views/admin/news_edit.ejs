 
<h1>Sửa bài viết</h1>
<form action="/admin/news/<%= post.id %>/edit?_csrf=<%= csrfToken %>" method="post" class="card">
  <div class="p">
    <div class="row" style="gap:8px;flex-wrap:wrap">
      <input name="title" value="<%= post.title %>" required style="flex:1;padding:10px;border-radius:8px;border:1px solid #1f2937;background:#0f172a;color:#fff" />
      <input name="slug" value="<%= post.slug %>" style="flex:1;padding:10px;border-radius:8px;border:1px solid #1f2937;background:#0f172a;color:#fff" />
      <input name="author" value="<%= post.author || '' %>" placeholder="Tác giả" style="width:200px;padding:10px;border-radius:8px;border:1px solid #1f2937;background:#0f172a;color:#fff" />
      <input name="thumbnail" value="<%= post.thumbnail || '' %>" placeholder="Ảnh đại diện (URL)" style="flex:1;padding:10px;border-radius:8px;border:1px solid #1f2937;background:#0f172a;color:#fff" />
      <select name="published" style="padding:10px;border-radius:8px;border:1px solid #1f2937;background:#0f172a;color:#fff">
        <option value="1" <%= post.published? 'selected':'' %>>Hiển thị</option>
        <option value="0" <%= !post.published? 'selected':'' %>>Ẩn</option>
      </select>
    </div>
    <textarea name="content" rows="10" style="margin-top:8px;width:100%;padding:10px;border-radius:8px;border:1px solid #1f2937;background:#0f172a;color:#fff"><%= post.content %></textarea>
    <button class="btn primary" type="submit" style="margin-top:8px">Lưu</button>
  </div>
</form>


